<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="275dp"
        android:layout_height="195dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/password"
        android:layout_marginStart="40dp"
        android:layout_alignBaseline="@+id/loginButton"/>
    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_toLeftOf="@+id/registerButton"
        android:layout_below="@+id/tvStringRemberUser"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="15"
        android:hint="Mật khẩu"
        android:layout_below="@+id/userName"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:keepScreenOn="false" />

    <CheckBox
        android:id="@+id/cbRememberUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvStringRemberUser"
        android:text="Nhớ Tài Khoản"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cbRememberUser"
        android:layout_alignBaseline="@+id/cbRememberUser"/>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:text="Quên mật khẩu?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:linksClickable="true" />

</RelativeLayout>