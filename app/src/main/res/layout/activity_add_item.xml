<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">
    <ImageView
        android:id="@+id/imItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType = "centerCrop"/>

    <ImageButton
        android:id="@+id/ibCancel"
        android:background="@drawable/circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="40dp"
        android:src="@android:drawable/ic_delete" />
    <TextView
        android:id="@+id/tvStringItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm:"
        android:layout_below="@+id/imItem"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/tvItemName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvStringItemName"
        android:layout_below="@+id/imItem"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="left"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/tvStringPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"
        android:layout_below="@+id/tvStringQuantity"
        android:text="Đơn giá:"
        />


    <EditText
        android:id="@+id/edQuantity"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvItemName"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/tvStringQuantity"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvStringUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"
        android:layout_below="@+id/tvStringPrice"
        android:text="Đơn vị: "/>

    <EditText
        android:id="@+id/edPrice"
        android:gravity="center"
        android:layout_toRightOf="@+id/tvStringPrice"
        android:layout_below="@+id/edQuantity"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="28dp"
        android:inputType="number"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvStringQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"
        android:layout_below="@+id/tvItemName"
        android:text="Số lượng:"/>

    <Spinner
        android:id="@+id/spinUnit"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_below="@+id/edPrice"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/tvStringUnit"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bntSubmit"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/spinUnit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="163dp"
        android:layout_marginRight="162dp"
        android:background="#dfdfdf"
        android:text="Ok" />


</RelativeLayout>