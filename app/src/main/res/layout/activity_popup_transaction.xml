<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/tvDateTransactionInPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: 29/11/2000"/>
    <TextView
        android:id="@+id/tvTimeTransactionInPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ: 12:00:00"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvActionTransaction"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức: Tự thêm vốn"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tvNameInTransactionInPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:text="Người thêm vốn: Trần Khắc Hùng"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        android:text="Tổng: 20000000 đ"
        android:id="@+id/tvChangeValueTransactionInPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelPopupViewDetailTransaction"
        android:text="Trở lại"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</LinearLayout>